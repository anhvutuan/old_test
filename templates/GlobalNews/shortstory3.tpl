<div class="col-md-6 mb-4">
	<div class="blog-post post-style-01">
		<a href="{full-link}" class="blog-image img-box">
			<img class="img-fluid" src="{image-1}" loading="lazy" alt="{title}">
		</a>
		<div class="blog-post-details">
			<span class="badge badge-large [newscount=1,10,19]bg-red[/newscount][newscount=2,11,20]bg-primary[/newscount][newscount=3,12,21]bg-yellow[/newscount][newscount=4,13,22]bg-blue[/newscount][newscount=5,14,23]bg-pink[/newscount][newscount=6,15,24]bg-purple[/newscount][newscount=7,16,25]bg-orange[/newscount][newscount=8,17,26]bg-green[/newscount][newscount=9,18,27]bg-skyblue[/newscount]">
				{category}
			</span>
			<h5 class="blog-title"><a href="{full-link}">{title}</a></h5>
			<div class="blog-post-meta">
				<div class="blog-post-time">
					[day-news]<i class="fa-solid fa-calendar-days"></i>{date=d M Y}[/day-news]
				</div>
				<div class="blog-post-time">
					[com-link]<i class="fa-regular fa-comment"></i>{comments-num}[/com-link]
				</div>
				<div class="blog-post-time">
					<i class="fa-regular fa-eye"></i>{views}
				</div>
			</div>
		</div>
	</div>
</div>