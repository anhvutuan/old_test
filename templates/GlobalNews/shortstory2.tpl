<div class="col-md-6 mb-4">
	<div class="blog-post post-style-06">
		<a href="{full-link}" class="blog-image img-box">
			<img class="img-fluid" src="{image-1}" loading="lazy" alt="{title}">
		</a>
		<div class="blog-details">
			<div class="blog-post-details">
				<span class="badge badge-style-03 [newscount=2,10,18]text-pink[/newscount][newscount=3,11,19]text-yellow[/newscount][newscount=4,12,20]text-red[/newscount][newscount=5,13,21]text-orange[/newscount][newscount=6,14,22]text-purple[/newscount][newscount=7,15,23]text-skyblue[/newscount][newscount=8,16,24]text-primary[/newscount]">
					{category}
				</span>
				<h6 class="blog-title"><a href="{full-link}">{title}</a></h6>
				<div class="blog-post-meta">
					<div class="blog-post-time">
						[day-news]<i class="fa-solid fa-calendar-days"></i>{date=d M Y}[/day-news]
					</div>
					<div class="blog-post-comment">
						[com-link]<i class="fa-regular fa-comment"></i>{comments-num}[/com-link]
					</div>
					<div class="blog-post-comment">
						<i class="fa-regular fa-eye"></i>{views}
					</div>
				</div>
			</div>
			<div class="blog-content">
				<p>{short-story limit="100"}</p>
			</div>
		</div>
	</div>
</div>