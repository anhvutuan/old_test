<div class="blog-post post-style-04">
	<a href="{full-link}" class="blog-image">
		<span class="img-box"><img class="img-fluid" src="{image-1}" loading="lazy" alt="{title}"></span>
	</a>
	<div class="blog-post-details">
		<span class="badge [newscount=1,9,17]text-orange[/newscount][newscount=2,10,18]text-primary[/newscount][newscount=3,11,19]text-red[/newscount][newscount=4,12,20]text-purple[/newscount][newscount=5,13,21]text-skyblue[/newscount][newscount=6,14,22]text-yellow[/newscount][newscount=7,15,23]text-blue[/newscount][newscount=8,16,24]text-pink[/newscount]">
			{category}
		</span>
		<h6 class="blog-title"><a href="{full-link}">{title}</a></h6>
		<div class="blog-post-meta">
			<div class="blog-post-time">
				[day-news]<i class="fa-solid fa-calendar-days"></i>{date=d M Y}[/day-news]
			</div>
			<div class="blog-post-time">
				[com-link]<i class="fa-regular fa-comment"></i>{comments-num}[/com-link]
			</div>
			<div class="blog-post-time">
				<i class="fa-regular fa-eye"></i>{views}
			</div>
		</div>
	</div>
</div>