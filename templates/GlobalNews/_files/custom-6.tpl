<div class="col-lg-6">
	<div class="blog-post post-style-07 mb-lg-0 mb-3">
		<div class="blog-post-details">
			<span class="badge badge-medium [newscount=1]bg-primary[/newscount][newscount=2]bg-blue[/newscount]">{category}</span>
			<h5 class="blog-title"><a href="{full-link}">{title}</a></h5>
			<div class="blog-post-meta">
				<div class="blog-post-time"> [day-news]<i class="fa-solid fa-calendar-days"></i>{date=d M Y}[/day-news] </div>
				<div class="blog-post-comment"> [com-link]<i class="fa-regular fa-comment"></i>{comments-num}[/com-link] </div>
				<div class="blog-post-comment"> <i class="fa-regular fa-eye"></i>{views} </div>
			</div>
		</div>
		<div class="post-image">
			<div class="img-box">[full-link]<img class="img-fluid" src="{image-1}" loading="lazy" alt="{title}">[/full-link]</div>
		</div>
	</div>
</div>