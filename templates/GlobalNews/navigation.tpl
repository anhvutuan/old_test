<div class="pagination ignore-select" id="pagination">
	[not-available=showfull]
	<div class="pagination__pages d-flex jc-center">
		[not-page-count=1][prev-link]<i class="fa-solid fa-chevron-left"></i>[/prev-link][/not-page-count]
		{pages}
		[next-link]<i class="fa-solid fa-chevron-right"></i>[/next-link]
	</div>
	[/not-available]
	[available=showfull]
	<div class="pagination__pages pagination__pages--full d-flex jc-center">{pages}</div>
	[/available]
</div>