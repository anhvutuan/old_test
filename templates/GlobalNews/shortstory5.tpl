<div class="col-md-12 mb-4">
	<div class="blog-post post-style-11">
		<a href="{full-link}" class="blog-image">
			<div class="img-box paddm">
				<img class="img-fluid" src="{image-1}" loading="lazy" alt="{title}">
			</div>
		</a>
		<div class="blog-post-details">
			<span class="badge badge-medium [newscount=1,10,19]bg-red[/newscount][newscount=2,11,20]bg-primary[/newscount][newscount=3,12,21]bg-yellow[/newscount][newscount=4,13,22]bg-blue[/newscount][newscount=5,14,23]bg-pink[/newscount][newscount=6,15,24]bg-purple[/newscount][newscount=7,16,25]bg-orange[/newscount][newscount=8,17,26]bg-green[/newscount][newscount=9,18,27]bg-skyblue[/newscount]">
				{category}
			</span>
			<h4 class="blog-title s5-title">
				<a href="{full-link}">{title}</a>
			</h4>
			<div class="blog-post-meta">
				<div class="blog-post-time">
					[day-news]<i class="fa-solid fa-calendar-days"></i>{date=d M Y}[/day-news]
				</div>
				<div class="blog-post-comment">
					[com-link]<i class="fa-regular fa-comment"></i>{comments-num}[/com-link]
				</div>
				<div class="blog-post-time">
					<i class="fa-regular fa-eye"></i>{views}
				</div>
			</div>
			<p>{short-story limit="150"}</p>
			<a class="btn-link" href="{full-link}">Read more</a> 
		</div>
	</div>
</div>